left_or_right = input("left or right?")
if left_or_right == "left":
  print("You made it past stage one!")
  swim = input("swim or wait?") 
  if swim == "wait": 
    print("Yoh when are you going to die? I wanna go home")
    door = input("Which door?")
    if door == "red":
     print("You got eaten by the illuminati. Game over")
    elif door == "blue":
      print("A witch thought you were with her man at the club so she threw a potion at you. Game over")
    elif door == "yellow":
      print("I didn't believe in you but you actually won, congrats man!")
    else: 
      print("Man game over. Get outta here!")
  else:
    print("Wamp wamp. You got eaten by a mermaid. Game over.")
else:
 print("You fell into a hole you loser! Game over, never play again!")
